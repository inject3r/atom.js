{
  "name": "atomjs",
  "version": "1.0.0",
  "description": "A powerful, lightweight, and extensible state management library for React with middleware, undo/redo, devtools, and context support.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint ./src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build",
    "build": "npm run clean && vite build && npm run type-check",
    "dev": "vite",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "release": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/inject3r/atom.js"
  },
  "keywords": [
    "react",
    "state",
    "state-management",
    "middleware",
    "devtools",
    "undo",
    "redo",
    "context",
    "react-store"
  ],
  "author": "Abolfazl Hosseini",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^8.0.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.3"
  }
}
